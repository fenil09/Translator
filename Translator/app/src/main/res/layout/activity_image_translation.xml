<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:background="@color/white"
        android:layout_height="match_parent"
        tools:context=".image_translation">

    <ImageView
            android:layout_width="305dp"
            android:layout_height="267dp" app:srcCompat="@drawable/gallery" android:id="@+id/imageView4"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintTop_toTopOf="parent" app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintVertical_bias="0.068"/>


    <Spinner
            android:layout_width="169dp"
            android:spinnerMode="dropdown"
            android:pointerIcon="arrow"
            android:background="@drawable/style_spinner"
            android:layout_height="68dp" android:id="@+id/spinner3"
            app:layout_constraintTop_toTopOf="parent" app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent" app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintHorizontal_bias="0.082" app:layout_constraintVertical_bias="0.526"/>
    <Spinner
            android:layout_width="169dp"
            android:spinnerMode="dropdown"
            android:pointerIcon="arrow"
            android:background="@drawable/style_spinner"
            android:layout_height="68dp" android:id="@+id/spinner4"
            app:layout_constraintTop_toTopOf="parent" app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent" app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintHorizontal_bias="0.933" app:layout_constraintVertical_bias="0.526"/>
    <ImageButton
            android:layout_width="59dp"
            android:background="@drawable/translation_round_button"
            android:layout_height="59dp" app:srcCompat="@drawable/ic_baseline_sync_alt_24"
            android:id="@+id/imageButton3"
            app:layout_constraintTop_toTopOf="parent" app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintVertical_bias="0.697" app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"/>
    <TextView
            android:hint="Hey Thanks for waiting for your Results..."
            android:textStyle="bold|italic"
            android:textColorHint="@color/white"
            android:textColor="@color/white"
            android:textSize="15sp"
            android:background="@drawable/roundeditext"
            android:paddingLeft="13dp"
            android:paddingTop="20dp"
            android:layout_width="340dp"
            android:layout_height="126dp" android:id="@+id/textView8"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent" app:layout_constraintVertical_bias="0.947"
            app:layout_constraintEnd_toEndOf="parent" app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintHorizontal_bias="0.626"/>
</androidx.constraintlayout.widget.ConstraintLayout>