<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/white"
        android:theme="@style/Theme.Translator_window"
        tools:context=".Translation_Screen">


    <EditText
            android:layout_width="266dp"
            android:layout_height="93dp"
            android:inputType="textPersonName"
            android:textColor="@color/white"
            android:hint="Enter your Text..."
            android:textColorHint="@color/white"
            android:textStyle="bold|italic"
            android:textSize="20sp"
            android:paddingLeft="30dp"
            android:background="@drawable/roundeditext"
            android:ems="10"
            android:id="@+id/et2"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent" app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintVertical_bias="0.142" app:layout_constraintHorizontal_bias="0.496"/>
    <Spinner
            android:layout_width="169dp"
            android:spinnerMode="dropdown"
            android:pointerIcon="arrow"
            android:background="@drawable/style_spinner"
            android:layout_height="68dp" android:id="@+id/spinner1"
            app:layout_constraintTop_toTopOf="parent" app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent" app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintHorizontal_bias="0.066" app:layout_constraintVertical_bias="0.42"/>
    <Spinner
            android:layout_width="169dp"
            android:spinnerMode="dropdown"
            android:pointerIcon="arrow"
            android:background="@drawable/style_spinner"
            android:layout_height="68dp" android:id="@+id/spinner2"
            app:layout_constraintTop_toTopOf="parent" app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent" app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintHorizontal_bias="0.933" app:layout_constraintVertical_bias="0.419"/>
    <ImageButton
            android:layout_width="59dp"
            android:background="@drawable/translation_round_button"
            android:layout_height="59dp" app:srcCompat="@drawable/ic_baseline_sync_alt_24"
            android:id="@+id/imageButton2"
            app:layout_constraintTop_toTopOf="parent" app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintVertical_bias="0.616" app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent" app:layout_constraintHorizontal_bias="0.517"/>
    <TextView
            android:hint="Hey Thanks for waiting for your Results..."
            android:textStyle="bold|italic"
            android:textColorHint="@color/white"
            android:textColor="@color/white"
            android:textSize="15sp"
            android:background="@drawable/roundeditext"
            android:paddingLeft="13dp"
            android:paddingTop="20dp"
            android:layout_width="278dp"
            android:layout_height="115dp" android:id="@+id/textView6"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent" app:layout_constraintVertical_bias="0.892"
            app:layout_constraintEnd_toEndOf="parent" app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintHorizontal_bias="0.541"/>
</androidx.constraintlayout.widget.ConstraintLayout>